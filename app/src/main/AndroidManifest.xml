<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.ehealthcare">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="android:appComponentFactory">
        <activity android:name="com.example.ehealthcare.PatientDashboardActivity"></activity>
        <activity android:name="com.example.ehealthcare.PostDetailActivity" />
        <activity android:name="com.example.ehealthcare.ThereProfileActivity" />
        <activity android:name="com.example.ehealthcare.AddPostActivity" />
        <activity
            android:name="com.example.ehealthcare.ChatActivity"
            android:theme="@style/AppThemeNo" />
        <activity android:name="com.example.ehealthcare.LoginActivity" />
        <activity android:name="com.example.ehealthcare.DashboardActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.ehealthcare.RegisterActivity" />
        <activity android:name="com.example.ehealthcare.MainActivity" />

        <service
            android:name="com.example.ehealthcare.notifications.FirebaseMessaging"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>